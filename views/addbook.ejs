<%- include('partials/header.ejs') %>
<% if (messages.error) { %>
  <%= messages.error %>
<% } %>
<div class="container mt-5">
    <h1>Add a Book</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
             
            <form action="/addbook" method="POST">
              <div class="form-group">
                <label for="bookname">Book Name</label>
                <input type="text" class="form-control" name="bookname" required>
              </div>
              <div class="form-group">
                <label for="author">Author name</label>
                <input type="text" class="form-control" name="author" required>
              </div>
              <div class="form-group">
                <label for="star" class="form-label">Rate The Book</label>
                <select class="form-select" aria-label="Default select example" id="star" name="star" required>
                    <option selected>Open this select menu</option>
                    <option value="1">&star;</option>
                    <option value="2">&star;&star;</option>
                    <option value="3">&star;&star;&star;</option>
                    <option value="4">&star;&star;&star;&star;</option>
                    <option value="5">&star;&star;&star;&star;&star;</option>
                  </select>
                    
            </div>
            
              
              
              
              
              
              <br>
              <button type="submit" class="btn btn-dark">Add Book</button>
            </form>
  
          </div>
        </div>
      </div>
    </div>
           
</div>

    
      

<%- include('partials/footer.ejs') %>    